*toggle_auto_read
	&tmp:sn.auto.enabled = true
	[set_cancel_skip]
	[notice text='自動読み進みOn']
	[return]

*toggle_skip
	&tmp:sn.skip.enabled = true
	[set_cancel_skip]
	[notice text='強制スキップ On']
	[return]

