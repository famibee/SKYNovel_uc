{
	"name": "uc",
	"version": "1.0.0",
	"description": "Novelgame(Tate-gaki) sample project",
	"main": "doc/app.js",
	"appBundleId": "com.fc2.blog.famibee.skynovel.uc",
	"appCopyright": "(c)夕街昇雪",
	"author": "夕街昇雪",
	"license": "MIT",
	"dependencies": {
		"@famibee/skynovel": "^1.5.0",
		"about-window": "^1.13.4",
		"crypto-js": "^4.0.0",
		"humane-js": "^3.2.2"
	},
	"devDependencies": {
		"@types/crypto-js": "^3.1.47",
		"@types/fs-extra": "^9.0.1",
		"@types/node": "^14.6.0",
		"css-loader": "^4.2.2",
		"electron": "^10.0.0",
		"electron-builder": "^22.8.0",
		"imagemin-webpack-plugin": "^2.4.2",
		"style-loader": "^1.2.1",
		"webpack": "^4.44.1",
		"webpack-cli": "^3.3.12",
		"webpack-dev-server": "^3.11.0"
	},
	"scripts": {
		"install": "npm run webpack:dev",
		"start": "electron doc/app.js",
		"web": "npm run watch:wds",
		"webpack:dev": "webpack --mode development --config ./core/webpack.config.js",
		"webpack:dev:w": "webpack --mode development --watch --config ./core/webpack.config.js",
		"watch:wds": "webpack-dev-server --config ./core/wds.config.js",
		"upd": "npx ncu -a && npm update",
		"npm_check_updates": "ncu",
		"npm_check_updates -g": "ncu -g",
		"npm_check_updates_do": "ncu -a && npm update && npm i -D",
		"webpack:pro": "rm -rf doc/web.*.js && webpack -p --config ./core/webpack.config.js",
		"rebuild": "rm -rf node_modules && rm package-lock.json && npm cache clear --force && npm i && npm run webpack:dev"
	},
	"build": {
		"appId": "com.fc2.blog.famibee.skynovel.uc",
		"productName": "桜の樹の下には",
		"directories": {
			"output": "build/package/"
		},
		"files": [
			"build/icon/*",
			"build/include/*",
			"doc/app/*",
			"doc/prj/",
			"doc/app.js"
		],
		"mac": {
			"icon": "build/icon/icon.icns",
			"target": [
				"dmg"
			],
			"category": "public.app-category.games"
		},
		"dmg": {
			"contents": [
				{
					"x": 410,
					"y": 220,
					"type": "link",
					"path": "/Applications"
				},
				{
					"x": 130,
					"y": 220,
					"type": "file"
				},
				{
					"x": 130,
					"y": 100,
					"type": "file",
					"path": "build/include/readme.txt"
				}
			]
		},
		"win": {
			"icon": "build/icon/icon.ico",
			"target": "nsis",
			"asarUnpack": [
				"build/include/"
			]
		},
		"linux": {
			"icon": "build/icon/icon.icns",
			"target": "AppImage",
			"category": "Game"
		}
	},
	"keywords": [
		"sample",
		"skynovel"
	],
	"repository": {
		"type": "git",
		"url": "git+ssh://git@github.com:famibee/SKYNovel_uc.git"
	},
	"bugs": {
		"url": "https://github.com/famibee/SKYNovel_uc/issues",
		"email": "ugainovel@gmail.com"
	},
	"homepage": "https://ugainovel.blog.fc2.com/"
}
