{
	"name": "uc",
	"version": "1.0.0",
	"description": "Novelgame(Tate-gaki) sample project",
	"main": "app.js",
	"appBundleId": "com.fc2.blog.ugainovel.uc",
	"appCopyright": "(c)ugainovel",
	"author": "ugainovel",
	"license": "MIT",
	"dependencies": {
		"humane-js": "^3.2.2",
		"skynovel": "^0.2.8"
	},
	"devDependencies": {
		"@types/node": "^10.12.21",
		"css-loader": "^2.1.0",
		"electron": "^4.0.4",
		"electron-builder": "^20.38.5",
		"imagemin-webpack-plugin": "^2.4.1",
		"style-loader": "^0.23.1",
		"webpack": "^4.29.3",
		"webpack-cli": "^3.2.3",
		"webpack-dev-server": "^3.1.14"
	},
	"scripts": {
		"install": "npm run webpack:dev",
		"start": "electron ./",
		"web": "npm run watch:wds",
		"webpack:dev": "webpack --mode development --config ./core/webpack.config.js",
		"webpack:dev:w": "webpack --mode development --watch --config ./core/webpack.config.js",
		"watch:wds": "webpack-dev-server --config ./core/wds.config.js",
		"upd": "npx ncu -a && npm update",
		"npm_check_updates": "ncu",
		"npm_check_updates -g": "ncu -g",
		"npm_check_updates_do": "ncu -a && npm update && npm i -D",
		"webpack:pro": "webpack --mode production --config ./core/webpack.config.js",
		"pack:win": "npm run webpack:pro && electron-builder ./build/win32-x64 --platform=win --arch=x64",
		"pack:mac": "npm run webpack:pro && electron-builder ./build/darwin-x64 --platform=mac --arch=x64"
	},
	"build": {
		"appId": "com.fc2.blog.ugainovel.uc",
		"productName": "桜の樹の下には",
		"directories": {
			"output": "build"
		},
		"files": [
			"app/",
			"app.js",
			"prj/",
			"build/icon/*"
		],
		"dmg": {
			"contents": [
				{
					"x": 410,
					"y": 150,
					"type": "link",
					"path": "/Applications"
				},
				{
					"x": 130,
					"y": 150,
					"type": "file"
				}
			]
		},
		"mac": {
			"icon": "build/icon/icon.icns",
			"target": [
				"dmg"
			],
			"category": "public.app-category.games"
		},
		"win": {
			"icon": "build/icon/icon.ico",
			"target": "nsis"
		},
		"linux": {
			"icon": "build/icon",
			"target": [
				"deb",
				"rpm"
			],
			"category": "Network"
		}
	},
	"keywords": [
		"sample",
		"skynovel"
	],
	"repository": {
		"type": "git",
		"url": "git+ssh://git@github.com:famibee/SKYNovel_uc.git"
	},
	"bugs": {
		"url": "https://github.com/famibee/SKYNovel_uc/issues",
		"email": "ugainovel@gmail.com"
	},
	"homepage": "https://ugainovel.blog.fc2.com/"
}
